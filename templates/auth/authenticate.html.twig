{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/authentification/authentification.scss') }}">
{% endblock %}

{% block body %}
    <div class="white z-depth-2" data-active-tab="{{ activeTab|default('login') }}">
        <ul class="tabs teal">
            <li class="tab col s6">
                <a class="white-text" href="#login">{{ 'label.connect'|trans([], 'authentication') }}</a>
            </li>
            <li class="tab col s6">
                <a class="white-text" href="#register">{{ 'label.create_account'|trans([], 'authentication') }}</a>
            </li>
        </ul>

        {# SECTION LOGIN #}
        <div id="login" class="col s12">
            <form method="post">
                <div class="form-container" style="padding: 20px;">
                    {% if error %}
                        <div class="card-panel red darken-2 white-text">
                            {{ 'error.invalid_credentials'|trans([], 'authentication') }}
                        </div>
                    {% endif %}

                    <div class="row">
                        <div class="input-field col s12">
                            <input type="email" value="{{ lastUsername }}" name="_username" id="username" class="validate" autocomplete="email" required autofocus>
                            <label for="username">{{ 'label.email'|trans([], 'authentication') }}</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="input-field col s12">
                            <input type="password" name="_password" id="password" class="validate" autocomplete="current-password" required>
                            <label for="password">{{ 'label.password'|trans([], 'authentication') }}</label>
                        </div>
                    </div>
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                    <br>
                    <div style="text-align: center;">
                        <button class="btn waves-effect waves-light teal" type="submit">
                            {{ 'label.connect'|trans([], 'authentication') }}
                        </button>
                    </div>
                </div>
            </form>
        </div>

        <div id="register" class="col s12">
            {{ form_start(registrationForm, {attr: {class: 'col s12'}}) }}
            <div class="form-container" style="padding: 20px;">
                <h3 class="teal-text center">{{ 'label.create_account'|trans([], 'authentication') }}</h3>

                <div class="row">
                    <div class="input-field col s12">
                        {{ form_widget(registrationForm.email, {attr: {class: 'validate'}}) }}
                        <label for="{{ registrationForm.email.vars.id }}">{{ 'label.email'|trans([], 'authentication') }}</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        {{ form_widget(registrationForm.nickname, {attr: {class: 'validate'}}) }}
                        <label for="{{ registrationForm.nickname.vars.id }}">{{ 'label.nickname'|trans([], 'authentication') }}</label>
                    </div>
                </div>

                <div class="row">
                    <div class="input-field col s12">
                        {{ form_widget(registrationForm.plainPassword, {attr: {class: 'validate'}}) }}
                        <label for="{{ registrationForm.plainPassword.vars.id }}">{{ 'label.password'|trans([], 'authentication') }}</label>
                    </div>
                </div>

                <div class="row">
                    <div class="col s12">
                        <label>
                            {{ form_widget(registrationForm.agreeTerms) }}
                            <span>{{ 'label.accept_cgu'|trans([], 'authentication') }}</span>
                        </label>
                        <div class="red-text" style="font-size: 0.8rem;">
                            {{ form_errors(registrationForm.agreeTerms) }}
                        </div>
                    </div>
                </div>

                <div style="text-align: center;">
                    <button class="btn waves-effect waves-light teal" type="submit">
                        {{ 'label.register'|trans([], 'authentication') }}
                    </button>
                </div>
            </div>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
