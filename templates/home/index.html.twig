{% extends 'base.html.twig' %}

{% block title %}{{ 'label.my_dashboard'|trans([], 'widget') }}{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('styles/widget/widget.scss') }}">
{% endblock %}

{% block body %}
    <div>
        <h4>{{ 'label.my_dashboard'|trans([], 'widget') }}</h4>

        <a href="{{ path('widget_init') }}"
           data-turbo-prefetch="false"
           data-turbo-frame="widget_modal_frame"
           class="btn modal-trigger">
            {{ 'label.add'|trans([], 'widget') }}
        </a>

        {{ include('widget/widgetList.html.twig') }}
    </div>

    <turbo-frame id="widget_modal_frame"></turbo-frame>
{% endblock %}
