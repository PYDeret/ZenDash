{% block create %}
    {% if widget is defined %}
        <turbo-stream action="append" target="widgets-container">
            <template>
                {{ include('widget/widgetCard.html.twig') }}
            </template>
        </turbo-stream>
    {% endif %}
{% endblock %}

{% block remove %}
    {% if id is defined %}
        <turbo-stream action="remove" target="widget_{{ id }}"></turbo-stream>
    {% endif %}
{% endblock %}
